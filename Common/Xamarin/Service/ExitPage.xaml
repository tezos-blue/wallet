<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:loc="clr-namespace:SLD.Tezos.Client.Localization"
	x:Class="SLD.Tezos.Client.Service.ExitPage"
	>
	<ContentPage.Content>
		<StackLayout
			VerticalOptions="Center"
			HorizontalOptions="Center"
			Margin="24">
			<Label
				Text="{loc:Translate Exit_Header}" 
				FontAttributes="Italic"
				Margin="0, 12"/>
			<Label
				x:Name="_Message" />
			<Button
				Clicked="OnClickExit"
				Margin="0,12"
				HorizontalOptions="Center"
				Text="{loc:Translate Restart}" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>